{% schema %}
{
  "name": "Personal Touch Section",
  "settings": [
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "CUSTOMISE"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Main heading",
      "default": "Add your personal touch"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Description",
      "default": "<p>Create your dream engagement ring with our Bespoke Ring Builder. Tailor each element to suit your personal preferences.</p>"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button text",
      "default": "CUSTOMISE"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Right Image"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "left"
    }
  ],
  "presets": [
    {
      "name": "Personal Touch",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}

<section class="personal-touch-section">
  <div class="personal-touch-container">
    <div class="personal-touch-content text-{{ section.settings.text_alignment }}">
      {% if section.settings.subheading != blank %}
        <p class="personal-touch-subheading">{{ section.settings.subheading }}</p>
      {% endif %}

      {% if section.settings.heading != blank %}
        <h2 class="personal-touch-heading">{{ section.settings.heading }}</h2>
      {% endif %}

      {% if section.settings.text != blank %}
        <div class="personal-touch-text">{{ section.settings.text }}</div>
      {% endif %}

      {% if section.settings.button_label != blank and section.settings.button_link != blank %}
        <a href="{{ section.settings.button_link }}" class="personal-touch-button">
          {{ section.settings.button_label }}
        </a>
      {% endif %}
    </div>

    {% if section.settings.image != blank %}
      <div class="personal-touch-image">
        <img
          src="{{ section.settings.image | image_url: width: 800 }}"
          alt="{{ section.settings.heading | escape }}"
          loading="lazy"
        >
      </div>
    {% endif %}
  </div>
</section>

<style>
.personal-touch-section {
  padding: 80px 0;
  background-color: #fff;
}

.personal-touch-container {
  display: flex;
  align-items: center;
  justify-content: space-between;
  max-width: 1200px;
  margin: 0 auto;
  gap: 60px;
  padding: 0 20px;
}

.personal-touch-content {
  flex: 1;
}

.personal-touch-subheading {
  font-size: 12px;
  letter-spacing: 2px;
  text-transform: uppercase;
  margin-bottom: 10px;
  color: #555;
}

.personal-touch-heading {
  font-size: 48px;
  font-weight: 500;
  line-height: 1.1;
  margin-bottom: 20px;
}

.personal-touch-text {
  font-size: 15px;
  color: #333;
  max-width: 400px;
  margin-bottom: 30px;
}

.personal-touch-button {
  display: inline-block;
  padding: 10px 25px;
  border: 1px solid #000;
  text-transform: uppercase;
  letter-spacing: 1px;
  font-size: 13px;
  background-color: #fff;
  color: #000;
  text-decoration: none;
  transition: all 0.3s ease;
}

.personal-touch-button:hover {
  background-color: #000;
  color: #fff;
}

.personal-touch-image {
  flex: 1;
  display: flex;
  justify-content: flex-end;
}

.personal-touch-image img {
  width: 100%;
  height: auto;
  object-fit: cover;
  max-width: 500px;
}

@media (max-width: 768px) {
  .personal-touch-container {
    flex-direction: column;
    text-align: center;
  }

  .personal-touch-image {
    justify-content: center;
  }

  .personal-touch-text {
    max-width: 100%;
  }
}
</style>
